<div class="row py-5">
    <div class="col-lg-4 mx-auto">
        <section class="d-flex justify-content-center mt-5 mb-5">
            <span class="text-capitalize text-white bg-dark px-2 py-1 rounded">
                <%= resource_name %> Registration
            </span>
        </section>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "users/shared/error_messages", resource: resource %>

                      <div class="field mt-5">
                        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "form-control py-2" %>
                      </div>

                    <div class="field mt-3">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control py-2" %>
                    </div>


                  <div class="field mt-3">
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control py-2" %>
                  </div>

                  <div class="field mt-3">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-control py-2" %>
                  </div>

                <div class="actions mt-4 mb-5">
                    <%= f.submit "Sign up", class: "form-control py-2 btn btn-primary fw-bold shadow" %>

                </div>
            <% end %>

        <%= render "users/shared/links" %>
    </div>
</div>
