<div class="row py-5">
    <div class="col-lg-4 mx-auto">
        <h3 class="text-center mb-4 mt-5">Forgot Password?</h3>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field mt-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control py-2" %>
          </div>

          <div class="actions mt-3 mb-5">
            <%= f.submit "Send reset password instructions", class: "form-control py-2 btn btn-primary fw-bold shadow" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

    </div>
</div>
